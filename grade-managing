names = input("Enter names separated by commas: ").title().split(",")

assignments = input("Enter assignment counts separated by commas: ").split(",")

grades = input("Enter grades separated by commas: ").split(",")

for name, assignment, grade in zip(names, assignments, grades):
    results = (int(assignment)*2 + int(grade))
    print("Hello there, {}!".format(name))
    print("Assignment counts: {}".assignment)
    print("Potential grades: {}".result)
    print("Hi [name],/n/nThis is a reminder that you have [assignment] assignments left to submit before you can graduate. Your current grade is [grade] and can increase to [result] if you submit all assignments before the due date.")
